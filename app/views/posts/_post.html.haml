.post
  .well
    .post_user.pull-left.clear.border-bottom.mb-10
      =link_to(image_for(post.user, "32x32#"), post.user, :class => "pull-left")
      .pull-left
        =link_to_self(post.user)
        -if post.target
          %i.icon-chevron-right
          =link_to_self(post.target)
        %br
        %span.small-info-text
          =time_ago_in_words(post.created_at)
          ago
    .post_content.clear
      -if post.text.present?
        =simple_format(auto_link(post.text))
      -if post.tags.present?
        .post_tags.mb-10
          -post.tags.each do |tag|
            %span.label=tag.to_s
      -if post.image
        =image_for(post, '140x')