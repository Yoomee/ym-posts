.modal-dialog.modal-lg
  .modal-content
    .modal-header
      %button.close{aria: { hidden: true }, data: { dismiss: 'modal' }, type: 'button' } &times;
    .modal-body.center
      -if @post.has_video?
        %iframe{ width: 853, height: 480, src: @post.video_embed_url, frameborder: 0, allowfullscreen: true}
      -else
        =image_for(@post, '880x>')
